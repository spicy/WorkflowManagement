<MudThemeProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudNavMenu>
        <MudText Typo="Typo.h6" Class="px-4">Workflow Management</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Workflow Software</MudText>
        <MudDivider Class="my-2" />
        <MudNavLink Href="/" Icon="fas fa-th-list">Dashboard</MudNavLink>
        <MudNavLink Href="/Stats" Icon="fas fa-chart-line">Statistics</MudNavLink>
        <MudNavGroup Title="Admin" Icon="fas fa-user-shield" @bind-Expanded=_isExpanded>
            <MudNavLink Href="/Customers" Icon="fas fa-user-friends">Customers</MudNavLink>
            <MudNavLink Href="/Employees" Icon="fas fa-people-carry">Employees</MudNavLink>
            <MudNavLink Href="/Processes" Icon="fas fa-list-ol">Processes</MudNavLink>
            <MudNavLink Href="/Services" Icon="fas fa-tools">Services</MudNavLink>
            <MudNavLink Href="/Packages" Icon="fas fa-box-open">Packages</MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
        @*NavMenu*@
    </MudDrawer>
    <MudMainContent>
        @*Body*@
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;
    bool _isExpanded = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}